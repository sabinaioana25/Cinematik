<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="auto">

        <ImageView
            android:id="@+id/cast_activity_user_profile"
            style="@style/review_grid_item_image_style"
            android:contentDescription="@string/review_activity_user_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/review_author_id"
            style="@style/review_grid_item_tv_name_style"
            app:layout_constraintBottom_toTopOf="@+id/review_content_id"
            app:layout_constraintStart_toEndOf="@+id/cast_activity_user_profile"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tommy" />

        <TextView
            android:id="@+id/review_content_id"
            style="@style/review_grid_item_tv_content_style"
            android:padding="@dimen/cast_activity_comment_padding"
            app:layout_constraintTop_toBottomOf="@+id/cast_activity_user_profile"
            tools:text="Doesn't matter how you look at it, this movie is darn good fun. I loved it from opening credits to the close. So what if the acting ... " />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>